<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- CLIENTE -->
        <LinearLayout
            android:id="@+id/layoutCliente"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <Button
                android:id="@+id/btnSolicitarServico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Solicitar Serviço" />

            <Button
                android:id="@+id/btnHistoricoCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver Histórico de Solicitações"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <!-- PRESTADOR -->
        <LinearLayout
            android:id="@+id/layoutPrestador"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <Button
                android:id="@+id/btnCadastrarServico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cadastrar Serviço" />

            <Button
                android:id="@+id/btnMeusServicos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver Meus Serviços"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
